{
  "name": "universal-site-stack",
  "private": true,
  "version": "0.1.0",
  "description": "Monorepo: Next.js (App Router) + Tailwind/shadcn + i18n + analytics consent + Nginx reverse proxy",
  "packageManager": "pnpm@9.6.0",
  "scripts": {
    "dev": "pnpm --filter @app/web dev",
    "build": "pnpm --filter @app/web build",
    "start": "pnpm --filter @app/web start",
    "lint": "pnpm --filter ./packages/* lint && pnpm --filter @app/web lint",
    "cwv:lhci": "pnpm --filter @app/web lhci",
    "images": "pnpm --filter @app/web gen:images"
  }
}

